@model LoginViewModel
<partial name="_ValidationSummary" />

<div class="container-fluid">

            @if (Model.EnableLocalLogin)
        {
      <div class="row">
        
        <div class="col-sm-6 col-md-5 form-section">
          <div class="login-wrapper">
            <h2 class="login-title">Sign in</h2>
            <form asp-route="Login">
              <input type="hidden" asp-for="ReturnUrl" />

              <div class="form-group">
                <label asp-for="Username" class="sr-only">Username</label>
                <input asp-for="Username" type="text" name="Username" id="Username" class="form-control" placeholder="Username">
              </div>
              <div class="form-group mb-3">
                <label asp-for="Password" class="sr-only">Password</label>
                <input asp-for="Password" type="password" name="password" id="password" class="form-control" placeholder="Password">
              </div>

              @if (Model.AllowRememberLogin)
                            {
                                <div class="form-group">
                                    <div class="form-check">
                                        <input class="form-check-input" asp-for="RememberLogin">
                                        <label class="form-check-label login-wrapper-footer-text text-secondary " asp-for="RememberLogin">
                                            Remember My Login
                                        </label>
                                    </div>
                                </div>
                            }
              <div class="d-flex justify-content-between align-items-center mb-5">

                <button class="btn login-btn" id="login" name="button" value="login">Login</button>
              </div>
            </form>           
            <p class="login-wrapper-footer-text">Need an account? <a href="/account/register" class="text-reset">Signup here</a></p>
          </div>
        </div>

        <div class="col-sm-6 col-md-7 intro-section">
          <div class="brand-wrapper">
          </div>
          <div class="intro-content-wrapper">
            <h1 class="intro-title"></h1>
            <p class="intro-text"></p>
          </div>
          <div class="intro-section-footer">
            <na class="footer-nav">

            </na>
          </div>
        </div>  
      </div>
      }
    </div>